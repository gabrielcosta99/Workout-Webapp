@page
@model MyWebApp.Pages.Exercises.CreateModel
@{
    ViewData["Title"] = "Create Exercise";
}

<form method="post">
    <div class="form-group">
        <label for="name">Exercise Name</label>
        <input asp-for="ExerciseViewModel.Name" id="name" class="form-control" placeholder="Enter exercise name" />

    </div>
    <div class="form-group">
        <label for="maxWeight">Maximum Weight(kg)</label>
        <input type="number" step="0.1" class="form-control" id="maxWeight" name="ExerciseViewModel.MaxWeight" placeholder="Enter maximum weight lifted">
    </div>
    <div class="form-group">
        <label for="maxReps">Max Reps</label>
        <input type="number" class="form-control" id="maxReps" name="ExerciseViewModel.MaxReps" placeholder="Enter number of maximum reps done">
    </div>
    <br />

    <!-- Action buttons -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="/Exercises" class="btn btn-secondary me-md-2">
            <i class="fas fa-arrow-left me-1"></i>Cancel
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-1"></i>Create Exercise
        </button>
    </div>
</form>
