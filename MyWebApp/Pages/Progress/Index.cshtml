@page
@model MyWebApp.Pages.Progress.IndexModel
@{
    ViewData["Title"] = "Progress";
}
<!-- Page to select the workout in which we will record progress -->

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="fas fa-dumbbell me-2 text-primary"></i>My Workouts
                </h1>
            </div>

           
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }


            <!-- button to redirect to history page-->
            <div class="mb-4">
                <a href="/Progress/History" class="btn btn-outline-primary">
                    <i class="fas fa-history me-2"></i>View Progress History
                </a>
            </div>


            @if (Model.Workouts.Any())
            {
                <div class="row">

                    @foreach (var workout in Model.Workouts)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 workout-card"
                                 onclick="window.location.href='@Url.Page("/Progress/WorkoutProgress", new {id = workout.Id})'"
                                style="cursor: pointer;">
                                <div class="card-header bg-light">
                                    <h5 class="card-title mb-0">@workout.Title</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-dumbbell fa-3x text-muted mb-3"></i>
                    <h3 class="text-muted">No workouts yet</h3>
                    <p class="text-muted mb-4">Create your first workout to get started with your fitness journey!</p>
                    <a href="/Workouts/Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create Your First Workout
                    </a>
                </div>
            }
        </div>
    </div>
</div>



